{
  "name": "movie-explorer",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "Um aplicativo React para explorar filmes usando a API do TMDb, desenvolvido para estudos de testes unit√°rios e E2E",
  "keywords": [
    "react",
    "typescript",
    "tmdb",
    "movies",
    "testing",
    "vitest",
    "styled-components"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/movie-explorer.git"
  },
  "homepage": "https://github.com/your-username/movie-explorer#readme",
  "bugs": {
    "url": "https://github.com/your-username/movie-explorer/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:summary": "npm run test:coverage && node scripts/coverage-summary.js",
    "coverage:analyze": "node scripts/coverage-summary.js"
  },
  "dependencies": {
    "@types/styled-components": "^5.1.34",
    "axios": "^1.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "msw": "^2.11.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
